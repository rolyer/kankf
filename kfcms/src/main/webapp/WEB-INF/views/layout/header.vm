<script>
$(document).ready(function(){
	$('#login').keypress(function(event){
    	var keycode = (event.keyCode ? event.keyCode : event.which);
    	if(keycode == '13'){
    		login();	
    	}
    });
});
function login() {
	var account = $('input[name="modal_login_account"]').val();
	var password = $('input[name="modal_login_password"]').val();

	if(utils.isEmpty(account)){
		alert("请输入您的账号")
		return false;
	}
	
	if(utils.isEmpty(password)){
		alert("请输入您的密码")
		return false;
	}
	
	$.ajax({
        type: "POST",
        url: '$link.getContextPath()/member/ajaxlogin.html?t='+utils.random(),
        data : {
			account: account,
			password: password
        },
        dataType:"json",
        success: function(response, textStatus, xhr) {
        	if(response.success){
        		window.location.href = "$link.getContextPath()/index.html";
        	} else {
				alert(response.data);
			}
        },
        error: function(xhr, textStatus, errorThrown) {
        	alert("服务器连接错误");
        }
    });
}
</script>