#set($layout="layout/admin/template.vm")
<script type="text/javascript" src="$link.getContextPath()/js/admin/game/index.js"></script>
<h1 class="float_left">开服信息</h1>
<a href="$link.getContextPath()/admin/game/edit.html?action=add&amp;account=admins" class="float_right btn btn-primary btn-large"><i class="icon-plus icon-white"></i>添加开服</a>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>编号</th>
			<th>游戏名称</th>
			<th>服务器名</th>
			<th>游戏类型</th>
			<th>开服时间</th>
			<th>状态</th>
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
		#if(0>=$list.size())
            <tr><td colspan="6">暂无数据...</td></tr>
		#end
		#foreach( $game in $list )
		<tr id="game_list_tr_gid_$!{game.id}">
			<td><input type="checkbox" value="$!{game.id}"></td>
			<td>$!{game.name}</td>
			<td>$!{game.serverName}</td>
			<td>$!{game.category}</td>
			<td>$!date.format('yyyy-MM-dd HH:mm ',$!game.startTime)</td>
			<td>
				#if($game.status==1)
					<span class="label label-success">已审核</span>
				#elseif($game.status==2)
					<span class="label label-warning">未通过</span>
				#else
					<span class="label label-default">待审核</span>
				#end
			</td>
			<td>
				<a href="edit.html?action=view&id=$!{game.id}&account=$!{game.account}" class="view-link">查看</a>
				<a href="edit.html?action=edit&id=$!{game.id}&account=$!{game.account}" class="view-link">修改</a>
				<a href="javascript:;" class="view-link" onclick="javascript: return del($!{game.id}, '$!{game.account}');">删除</a>
			</td>
		</tr>
		#end
	</tbody>
</table>

#pagination2($totalPages $currentPage '?')