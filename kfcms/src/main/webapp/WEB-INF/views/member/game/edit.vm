#set($layout="layout/member/template.vm")

<h1>$!{title}</h1>
<form class="form-horizontal" action="$link.getContextPath()/member/game/save.html" method="POST">
	<fieldset>
		<legend>开服信息</legend>
		<div class="control-group">
			<label class="control-label">游戏名称</label>
			<div class="controls">
				<input type="text" class="input-xlarge" name="name" value="$!{game.name}" />
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">开始时间</label>
			<div class="controls">		  
				<input id="datetimepicker" type="text" class="input-xlarge" name="statTime" value="$!{game.statTime}" readonly />
				<script>
					
					$(function(){
						$('#datetimepicker').datetimepicker({
							value:'$!date.format('yyyy-MM-dd HH:mm',$!game.startTime)',
							//mask:"9999-12-31 00:00",
							format:'Y-m-d H:i',
							lang:'ch'
						});
					});
				</script>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">服务器名</label>
			<div class="controls">
				<input type="text" class="input-xlarge" name="serverName" value="$!{game.serverName}" />
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">URL</label>
			<div class="controls">
				<input type="text" class="input-xlarge" name="url" value="$!{game.url}" />
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">游戏类型</label>
			<div class="controls">
				<input type="text" class="input-xlarge" name="category" value="$!{game.category}" />
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">运营商</label>
			<div class="controls">
				<input type="text" class="input-xlarge" name="platform" value="$!{game.platform}" />
			</div>
		</div>
		
		<input type="hidden" name="id" value="$!{game.id}" />

		#if($disabled==true)		
		<div class="form-actions">
			
			<button type="submit" class="btn btn-primary">保存</button> <button class="btn">取消</button>

		</div>
		#end
	</fieldset>
</form>
